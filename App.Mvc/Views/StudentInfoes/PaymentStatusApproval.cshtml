@model IEnumerable<App.Core.Entities.StudentInfo>

@{
    ViewBag.Title = "Index";
}
    <div class="col-md-12 col-sm-12">
        <div class="panel panel-info">
            <div class="panel-heading">Admit Card Approval</div>
            <div class="panel-body">
                <table class="table">
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.IdNo)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Name)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.ContactNo)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Email)
                        </th>
                        <th>Payment Image</th>
                        <th></th>
                    </tr>

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.IdNo)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.ContactNo)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Email)
                            </td>
                            <td>
                                <img src="@item.ImageFilePath" width="100px" height="100px" />
                            </td>
                            <td>
                                <a class="js-approve btn btn-primary" data-id="@item.Id">Approve</a>
                            </td>
                        </tr>
                    }

                </table>
            </div>
        </div>
    </div>

        
@section scripts
{
    <script type="text/javascript">
        $(document.body).on("click", ".js-approve", function() {
            var button = $(this);
            var id = button.attr("data-id");

            $.get("/AdmitCardApproval/GiveApproval?stdId=" + id,
                function(r) {
                    if (r > 0)
                        alert("Successfully Approved");
                });
        });
    </script>
}
